<%=item.activity%>
<%if item.condition == "public"%>
    <span class= "secondary label">
    <%else%>
        <span class="warning label">
        <%end%>
        <%=item.condition%>
        <% if item.status == "incomplete"%>
            <span class="label"><%=link_to "Mark as done", mark_as_done+_path(item_id: item.id)%>
        <%else%>
            <b>  DONE</b>
        <%end%>
        <%if item.status == "done"%>
            <span class="label"
                <%=link_to "Undo", undo_path(item_id: item.id)%>
            <%end%>
