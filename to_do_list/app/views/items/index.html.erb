<% @items.each do |item|%>
    <%= item.activity%>
    <% if item.condition == "pub" %>
<span class = "secondary label">
<% else %>
    <span class= "warning label">
<%> end %>
<%= item.condition%>
<% if item.status == "incomplete" %>
    Incomplete
<%  else %>
    DONE
    <%>end%>
    <%= item.card.title %>
    <%= item.card.list.user.name%>
    <% if current_user_is_not_requester?(item.card)%>
        <span class="label"><%link_to "Request to edit", new_request_path(card_id: item.card.id, user_id: current_user.id) %>
    <% else %>
        Requested
        <% end %>
        <%end %>
